<%= render :partial => 'shared/errors', :locals => {:obj => @user} %>
<%= form_for @user do |f| %>
  <div class='field'>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class='field'>
    <%= f.label :avatar %>
    <%= f.text_field :remote_avatar_url %>
  </div>
  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class='field'>
    <%= f.submit %>
  </div>
<% end %>
